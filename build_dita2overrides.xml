  See the accompanying LICENSE file for applicable licenses.
--><project name="com.here.validate.svrl.overrides">
	<!--
	Setting up schematron processing. Sets up ant variable overrides.
-->
	<target depends="build-init" name="custom-validation.init">
		<property name="svrl.customization.dir" value="${dita.plugin.com.here.validate.svrl.overrides.dir}/xsl"/>
		<property name="svrl.ruleset.file" value="${dita.plugin.com.here.validate.svrl.overrides.dir}/cfg/ruleset/default.xml"/>
		<condition property="otversion.legacy">
			<matches pattern="^[1|2].*" string="${otversion}"/>
		</condition>
		<typedef file="${dita.plugin.com.here.validate.svrl.dir}/resource/macros.xml"/>
		<svrl-log id="SVRL002I" level="info" message="Initializing DITA validation - Loading schematron rules from ${dita.plugin.com.here.validate.svrl.overrides.dir}/xsl"/>
	</target>
	<target depends="custom-validation.init, svrl" name="custom-validation"/>
	<!--
		Ant target executed to create an SVRL file
	-->
	<target depends="custom-validation, svrl-merge" name="dita2overrides"/>
	<!--
		Ant target executed when the echo transtype is invoked.
	-->
	<target depends="dita2overrides, svrl-filter" name="dita2overrides-echo"/>
</project>